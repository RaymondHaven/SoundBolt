
<div class="container">

  <div class="row">
    <div class="container">

      <div class="col-md-5">
        <h3>Post a Comment</h3>
        <form class="form-group" id="new-comment-form">
          <input type="text" name="comment[content]"
                 class="form-control" id="content-field">
          <br>
          <input type="submit" class="btn btn-default" value="Post" id="new-comment-button">
        </form>
      </div>

      <div class="col-md-1">

      </div>

      <div class="col-md-5 comment-info-panel">
        <h3>Timeline Info</h3>
        <!-- <p>This comment will be posted at 1:56s.</p>
        <p>Special effects will be added automatically</p>
        <p>Do not post inappropriate stuff!</p> -->
        <h3>This comment will be posted at <%= audioMaster.currentTime %></h3>
      </div>
    </div>
  </div>

</div>

<div class="container">
  <table class="table table-striped table-hover all-comment-table">

    <thead>
      <tr>
        <th>Username</th>
        <th>Content</th>
        <th>Timeline</th>
        <th>Posted on</th>
      </tr>
    </thead>

    <tbody>
      <% comments.each(function(comment){ %>
        <tr class="active">
          <td><%= comment.escape('username') %></td>
          <td><%= comment.escape('content') %></td>
          <td><%= comment.escape('timeline_position') + "s" %></td>
          <td><%= comment.escape('updated_at') %></td>
        </tr>
      <%  }) %>
    </tbody>

  </table>
</div>
