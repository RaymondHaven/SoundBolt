
<div class="container">

  <div class="row">
    <div class="container">

      <div class="col-md-5">
        <h3>Post a Comment</h3>
        <form class="form-group" id="new-comment-form">
          <input type="text" name="comment[content]"
                 class="form-control" id="content-field">
          <br>
          <input type="submit" class="btn btn-default" value="Post" id="new-comment-button">
        </form>
      </div>

      <div class="col-md-1">

      </div>

      <div class="col-md-5" class="comment-info-panel">
        <h3>Timeline Info</h3>
        <p>This comment will be posted at 1:56s.</p>
      </div>
    </div>
  </div>

</div>

<div class="container">
  <table class="table table-striped table-hover ">

    <thead>
      <tr>
        <th>Username</th>
        <th>Content</th>
        <th>Timeline</th>
        <th>Posted on</th>
      </tr>
    </thead>

    <tbody>
      <% comments.each(function(comment){ %>
        <tr>
          <td><%= comment.username %></td>
          <td><%= comment.get('content') %></td>
          <td><%= comment.get('timeline_position') %></td>
          <td><%= comment.get('updated_at') %></td>
        </tr>
      <%  }) %>
    </tbody>

  </table>
</div>
