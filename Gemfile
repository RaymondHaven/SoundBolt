source 'https://rubygems.org'

gem 'rails', '4.2.3'

# Use Postgresql
gem 'pg'

gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc
gem 'bcrypt', '~> 3.1.7'

# Use Backbone framework
gem 'backbone-on-rails'

# Use Bootstrap
gem 'bootstrap-sass'

# Use figaro to hide sensitive information
gem 'figaro'

# Use paperclip and aws-sdk to interact with file system
gem 'paperclip'
gem 'aws-sdk-v1'

group :development, :test do
  gem 'pry-rails'
  gem 'spring'

  # Use debugging utilities
  gem 'byebug'
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'web-console', '~> 2.0'
end
